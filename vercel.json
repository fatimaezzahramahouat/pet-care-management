{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "app.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/uploads/$1"
    },
    {
      "src": "/src/(.*)",
      "dest": "/public/src/$1"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ]
}
